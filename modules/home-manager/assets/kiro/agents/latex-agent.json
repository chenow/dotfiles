{
    "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
    "name": "latex-agent",
    "description": "An agent for LaTeX document generation and management purposes.",
    "prompt": "You are an expert LaTeX developer helping me create and manage LaTeX documents efficiently.",
    "mcpServers": {
        "github": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "--env-file",
                "/Users/chenow/secrets/github-access-token.env",
                "ghcr.io/github/github-mcp-server"
            ]
        },
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ]
        },
        "arxiv-latex-mcp": {
            "command": "uv",
            "args": [
                "--directory",
                "/Users/chenow/git/arxiv-latex-mcp",
                "run",
                "server/main.py"
            ]
        }
    },
    "tools": [
        "fs_read",
        "fs_write",
        "execute_bash",
        "introspect",
        "@context7",
        "@arxiv-latex-mcp",
        "@github/search_code",
        "@github/get_file_contents",
        "@github/search_repositories"
    ],
    "allowedTools": [
        "@context7",
        "@github",
        "@arxiv-latex-mcp"
    ],
    "toolsSettings": {
        "execute_bash": {
            "autoAllowReadonly": true,
            "allowedCommands": [
                "make",
                "nix fmt"
            ]
        },
        "fs_write": {
            "allowedPaths": [
                "~/git/"
            ]
        }
    },
    "resources": [
        "file://~/.kiro/ressources/latex.md"
    ]
}