{
    "$schema": "https://raw.githubusercontent.com/aws/amazon-q-developer-cli/refs/heads/main/schemas/agent-v1.json",
    "name": "coding-agent",
    "description": "An agent for software-design and coding purposes.",
    "prompt": "You are a senior software engineer helping me browse documentation and generate code ready for usage.",
    "mcpServers": {
        "github": {
            "command": "docker",
            "args": [
                "run",
                "-i",
                "--rm",
                "--env-file",
                "/Users/chenow/secrets/github-access-token.env",
                "ghcr.io/github/github-mcp-server"
            ]
        },
        "context7": {
            "command": "npx",
            "args": [
                "-y",
                "@upstash/context7-mcp"
            ]
        }
    },
    "tools": [
        "*"
    ],
    "allowedTools": [
        "fs_read",
        "knowledge",
        "thinking",
        "@apple-tools-mcp",
        "@context7",
        "@github/search_code",
        "@github/get_file_contents",
        "@github/search_repositories"
    ],
    "toolsSettings": {
        "execute_bash": {
            "allowReadOnly": true
        },
        "use_aws": {
            "allowReadOnly": true
        },
        "fs_write": {
            "allowedPaths": [
                "/Users/chenow/git/"
            ]
        }
    },
    "resources": [
        "file:///Users/chenow/.aws/amazonq/ressources/context.md"
    ]
}